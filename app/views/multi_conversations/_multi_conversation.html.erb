<li>
  <div class="panel panel-default" data-multi-conversation-id="<%= multi_conversation.id %>", style="padding: 20px; margin-bottom: 20px">
    <div class="panel-heading">
      <%= link_to multi_conversation.opposed_user(user).email, '', class: 'toggle-window' %>
      <%= link_to "x", close_multi_conversation_path(multi_conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="">
      <div class="messages-list", id=<%= "multi-messages-list-#{multi_conversation.id}"%>>
        
        <%= render 'multi_conversations/multi_conversation_content', messages: multi_conversation.messages, user: user %>
        
      </div>
      <%= form_for [multi_conversation, multi_conversation.messages.new], class: "send_message", remote: true do |f| %>
        <%= f.hidden_field :user_id, value: user.id %>
        <%= f.text_area :body, class: "message" %>
        <%= f.submit "Send", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</li>
