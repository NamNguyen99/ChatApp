var conversations = $('#multi-conversations-list');
var conversation = conversations.find("[data-multi-conversation-id='" + "<%= @multi_conversation.id %>" + "']");

if (conversation.length !== 1) {
  conversations.append("<%= j(render 'multi_conversations/multi_conversation', multi_conversation: @multi_conversation, user: current_user) %>");
  conversation = conversations.find("[data-multi-conversation-id='" + "<%= @multi_conversation.id %>" + "']");
}

conversation.find('.panel-body').show();

var messages_list = conversation.find('.messages-list');
var height = messages_list[0].scrollHeight;
messages_list.scrollTop(height);
